%div#votebox.float-r
  %span= pluralize(@package.package_votes_count, "vote")
  %hr(style="margin: 0 0 3px 0")
  - if logged_in? && current_user.voted_for?(@package)
    = image_tag("tick.png", :alt => "I use this package!")
  - else
    - form_tag(toggle_vote_package_path(@package)) do
      = submit_tag("Vote!", :class => "red", :style => "background-color: transparent; border: 0")
