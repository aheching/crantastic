<%= error_messages_for :review, :object => @review -%>

<% form_for([:package, :version, @review]) do |f| %>
  <p>
    <b>Rating out of 5</b><br />
    <%= select :review, :rating, 1..5 %>
  </p>

  <p>
    <b>A brief summary</b><br />
    <%= f.text_field :title, :maxlength => 45 %>
  </p>

  <p>
    <b>Review</b><br />
    <%= f.text_area :review, :rows => 10 %>
  </p>

  <p>
    <%= f.submit @review.new_record? ? "Enter this review" : "Update" %>
  </p>
<% end %>
