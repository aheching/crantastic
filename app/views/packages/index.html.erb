<h1>R packages</h1>

<div class="content">
  <h3><%= Package.count %> listed on crantastic
    <small>(see them <%= link_to "all on one page", all_packages_url %>)</small>.</h3>

  <form action="/packages" method="get">
  <p>Search <input id="package-search" name="search" type="text" autocomplete="off" />
    <%= image_tag("spinner.gif", :id => "spinner") -%>
  </p>
  </form>

  <div id="packages_list">
    <%= render :partial => "packages/list" -%>
  </div>

</div>
