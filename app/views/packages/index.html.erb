<% @title = @packages.length.to_s + " R packages"; @plural = true %>
<% @atom = formatted_packages_path(:format => :atom) %>

<% cache do %>
  <p>There are <%= @packages.length %> packages listed on crantastic:

  <%- for package in @packages -%>
  <%= link_to package.name, package %>
  <%- end -%>
  </p>
<% end %>