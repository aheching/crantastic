%div#uses-button.button
  %span= pluralize(@package.package_users_count, "user")
  %hr(style="margin: 0 0 3px 0")
  - if logged_in? && current_user.uses?(@package)
    - form_tag(toggle_usage_package_path(@package)) do
      %div= submit_tag("Un-use", :class => "red")
  - else
    - form_tag(toggle_usage_package_path(@package)) do
      %div= submit_tag("I use this!", :class => "red")
