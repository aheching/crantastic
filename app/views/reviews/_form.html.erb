<%= error_messages_for :review, :object => @review -%>

<% form_for([@package, @review]) do |f| %>
  <p>
    <label for="review_title">A brief summary</label><br />
    <%= f.text_field :title, :maxlength => 45 %>
  </p>

  <p>
    <label for="review_review">Review</label>
    <small>(<%= link_to "Markdown", "http://daringfireball.net/projects/markdown/" %>
      enabled. Place source between
      <em>+BEGIN_SRC</em> and <em>+END_SRC</em> markers.)</small>
    <br />
    <%= f.text_area :review %>
  </p>

  <p>
    <%= f.submit @review.new_record? ? "Enter this review" : "Update" %>
    <%= content_tag("small", "(Keep in mind that you can edit it later)") if @review.new_record? %>
  </p>
<% end %>
